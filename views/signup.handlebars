<!-- Sign Up -->
<div class="container-fluid border border-dark border-3 rounded-3 my-2 shadow" style="width: 45%;">
    <div class="d-flex flex-wrap row justify-content-between bg-dark bg-gradient">
        <div class="col-12 text-center text-warning fs-3">
            Sign Up
        </div>
    </div>
    <div class="d-flex flex-wrap justify-content-center row bg-dark ">
        <div class="col-sm-12 text-start text-warning border border-warning rounded-bottom my-2 fs-6 p-3 bg-dark bg-gradient d-flex flex-wrap justify-content-center"
            style="width: 98%;">
